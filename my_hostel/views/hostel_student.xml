<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <record id="view_hostel_student_list" model="ir.ui.view">
            <field name="name">hostel.student.list</field>
            <field name="model">hostel.student</field>
            <field name="arch" type="xml">
                <list string="Students">
                    <field name="name"/>
                    <field name="gender"/>
                    <field name="room_id"/>
                    <field name="status"/>
                </list>
            </field>
        </record>

        <record id="view_hostel_student_form" model="ir.ui.view">
            <field name="name">hostel.student.form</field>
            <field name="model">hostel.student</field>
            <field name="arch" type="xml">
                <form string="Student">
                    <header>
                        <button name="action_remove_room"
                            string="Return Room"
                            type="object"
                            class="btn-primary"
                            invisible="not room_id"
                        />
                        <button name="action_assign_room"
                            string="Assign Room"
                            type="object"
                            class="btn-primary"
                            invisible="room_id"
                        />
                        <button name="%(my_hostel.action_assign_room_student_wizard)d"
                            string="Assign Room from action"
                            type="action"
                            class="btn-primary"
                            invisible="room_id"
                        />
                        <field name="status" widget="statusbar" options="{'clickable': '1', 'autosave': False}"/>
                    </header>
                    <sheet>
                        <group>
                            <group>
                                <field name="name"/>
                                <field name="gender"/>
                                <field name="active"/>
                            </group>
                            <group>
                                <field name="room_id" readonly="True"/>
                                <field name="hostel_id"/>
                                <field name="currency_id"/>
                                <field name="rent_amount"/>
                                <field name="admission_date"/>
                                <field name="discharge_date"/>
                                <field name="duration"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record model="ir.actions.act_window" id="action_hostel_student">
            <field name="name">Students</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">hostel.student</field>
            <field name="view_mode">list,form</field>
            <field name="domain">[]</field>
            <field name="context">{}</field>
             <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                    Create Student.
                </p>
             </field>
        </record>

        <menuitem id="hostel_student_sub_menu" name="Students" parent="my_hostel.hostel_main_menu"
            action="my_hostel.action_hostel_student" groups="my_hostel.group_hostel_manager"
            sequence="3"/>

    </data>
</odoo>
